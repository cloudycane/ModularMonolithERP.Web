@model SuministradorViewModel

<h1>Crear Suministrador</h1>

<div class="container">

   @using (Html.BeginForm("Crear", "PortalSuministrador", FormMethod.Post, new { @style = "margin-top: 4%; margin-bottom: 4% " }))
    {
        <div class="col-lg-3">
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control"  })
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.Descripcion)
            @Html.TextBoxFor(model => model.Descripcion, "", new { @class = "form-control"  })
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.Direccion)
            @Html.TextBoxFor(model => model.Direccion, "", new { @class = "form-control"  })
        </div>
    
        <div class="col-lg-3">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, "", new { @class = "form-control"  })
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.TelefonoContacto)
            @Html.TextBoxFor(model => model.TelefonoContacto, "", new { @class = "form-control"  })
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.CategoriaProveedor)
            @Html.DropDownList("CategoriaProveedor", Html.GetEnumSelectList<CategoriaProveedorEnum>(), "Seleccionar Categoría del Proveedor", new { @class = "form-control"})
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.CondicionesPagoEnum)
            @Html.DropDownList("CondicionesPagoEnum", Html.GetEnumSelectList<CondicionesPagoEnum>(), "Seleccionar la condición del pago", new {@class = "form-control"} )
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.FormasPago)
            @Html.DropDownList("FormasPago", Html.GetEnumSelectList<FormasPagoEnum>(), "Seleccionar Formas de Pago", new { @class = "form-control" })
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.MetodosTransporte)
            @Html.DropDownList("MetodosTransporte", Html.GetEnumSelectList<MetodosTransporteEnum>(), "Seleccionar Método de Transporte", new { @class = "form-control" })
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.MonedaPreferida)
            @Html.DropDownList("MonedaPreferida", Html.GetEnumSelectList<MonedaPreferidaEnum>(), "Seleccionar Moneda Preferida", new { @class = "form-control" })
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.TipoProveedor)
            @Html.DropDownList("TipoProveedor", Html.GetEnumSelectList<TipoProveedorEnum>(), "Seleccionar Moneda Preferida", new { @class = "form-control" })
        </div>

        <div class="col-lg-3">
            @Html.LabelFor(model => model.PaisOrigen)
            @Html.DropDownList("PaisOrigen", Html.GetEnumSelectList<PaisOrigenEnum>(), "Seleccionar el país origen", new { @class = "form-control" })
        </div>

        <div class="col-lg-3" style="float: right; margin-top: 2%;">
            <button class="btn btn-primary" type="submit">Enviar</button>
        </div>
    }

</div>