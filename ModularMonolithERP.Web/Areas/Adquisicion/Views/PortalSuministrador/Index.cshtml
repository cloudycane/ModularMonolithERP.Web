@model ListadoSuministradorViewModel

@{

}

<link rel="stylesheet" href="~/css/portalSuministrador.css" />
<div class="container">
    <h1 class="text-center">Portal Suministradores</h1>
    <div id="cardsDiv" class="col-lg-12">
        @foreach (var suministrador in Model.Suministradores)
        {

            <div class="col-lg-4 text-center" id="card">
                <h2>@suministrador.Nombre</h2>
                <center>
                    <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" style="width: 150px; height: 150px;" class="img-responsive" alt="Generic placeholder thumbnail">
                </center>
                <h4>@suministrador.Direccion | @suministrador.Descripcion | @suministrador.Email</h4>
                <div>
                    <a class="btn btn-primary">Ver Productos</a>
                    <a class="btn btn-primary">Contactar</a>
                </div>
            </div>

        }
    </div>
    
</div>

