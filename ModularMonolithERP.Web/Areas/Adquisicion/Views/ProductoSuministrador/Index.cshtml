@model ListadoProductoSuministradorViewModel

<link rel="stylesheet" href="~/css/indexProductoSuministrador.css" />


<div class="container">
    <h1 class="text-center">Productos (Suministradores)</h1>
    <div id="cardsDiv" class="col-lg-12">
        @foreach (var productos in Model.ProductoSuministradores)
        {

            <div class="col-lg-4 text-center" id="card">
                <h2 class="text-center">@productos.NombreProducto</h2>
                <center>
                    <img src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" style="width: 150px; height: 150px;" class="img-responsive" alt="Generic placeholder thumbnail">
                </center>
                <h4><strong>Descripción: </strong>@productos.DescripcionProducto | <strong>Coste: </strong>@productos.CosteProducto | <strong>Proveedor: </strong> @productos.Suministrador.Nombre</h4>
               
            </div>

        }
    </div>

</div>
