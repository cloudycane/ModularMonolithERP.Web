                    <li><a href="#">Bills of Materials</a></li>
                    <li><a href="#">Reports</a></li>
                    <!-- ADQUISICIÓN -->
                    <li><a href="#">Purchase Requisition</a></li>
                    <li><a href="#">Purchase Order</a></li>
                    <li><a href="#">Review and Approval</a></li>
                    <li><a href="#">Invoice and Payment</a></li>
                    <li><a href="#">Reports</a></li>
                    <!-- INVENTORIA -->
                    <li><a href="#">Warehouse Management</a></li>
                    <li><a href="#">Managing Purchase and Sales Orders</a></li>
                    <li><a href="#">Payment Gateway</a></li>
                    <li><a href="#">Business to Business E-Commerce</a></li>
                    <li><a href="#">Stock Tracking and Transfers</a></li>
